{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": ["standard", "plugin:react/recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"plugins": ["react", "jest"],
	"rules": {
		"jest/expect-expect": "error"
	}
}
